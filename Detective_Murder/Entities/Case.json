{
  "name": "Case",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "Rookie",
        "Inspector",
        "Detective",
        "Chief"
      ]
    },
    "subject_focus": {
      "type": "string",
      "enum": [
        "Math",
        "Science",
        "Integrated"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "Published"
      ],
      "default": "Draft"
    },
    "cover_image": {
      "type": "string"
    },
    "briefing_video_url": {
      "type": "string"
    },
    "master_clue_fragment": {
      "type": "string",
      "description": "A piece of the master puzzle revealed upon solving this case"
    }
  },
  "required": [
    "title"
  ]
}