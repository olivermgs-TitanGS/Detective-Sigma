# Environment Variables for Case Generator Service

# Service Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=info
API_SECRET=your-secret-key-here

# Database (Use your Neon PostgreSQL database URL)
DATABASE_URL=postgresql://user:password@host.neon.tech/detective_sigma_cases?sslmode=require

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# AI Providers (choose one or multiple)
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM (Ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ComfyUI Integration
COMFYUI_API_URL=http://localhost:8188

# Generation Limits
MAX_CONCURRENT_GENERATIONS=5
GENERATION_TIMEOUT_MS=300000
CACHE_TTL_SECONDS=3600

# Quality Thresholds
MIN_UNIQUENESS_SCORE=0.85
MAX_GENERATION_RETRIES=3

# Logging
LOG_LEVEL=info
