# Environment Configuration Example
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://detective:detective_secret_2025@localhost:5432/detective_academy
POSTGRES_USER=detective
POSTGRES_PASSWORD=detective_secret_2025
POSTGRES_DB=detective_academy

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_URL=http://localhost:4000

# Frontend
REACT_APP_API_URL=http://localhost:4000
REACT_APP_ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if needed)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Email (for future features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_password
# EMAIL_FROM=noreply@detectiveacademy.com
